          << "\t" << center.y
          << "\t" << p
          << "\t" << u.x
          << "\t" << u.y
          << "\t" << temperature
          << "\t" << pana
          << "\t" << uana.x
          << "\t" << uana.y
          << "\t" << tana
          << "\n";
 }  
