 const ℝ δtSx = δt/(epsilon*δx);
 const ℝ N_coeff=2*epsilon/(2*epsilon+tau*δx);
 const ℝ e1 = N_coeff*(tau*δt)/(epsilon² + 2*tau*δt);
  
  
 cp1P=cP +e1*(cT-cP); //source1(center,n_time)*δt;
  
  ∀ node
      {
