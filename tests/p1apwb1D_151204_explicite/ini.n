// ****************************************************************************
// * iniCellCenter
// ****************************************************************************


∀ cells void iniCellCenter(void) out (/*node coord,*/ cell center) @ -5.0
{
  center=0.0;
  ∀ node
      {
        center+=coord;
      }
  center *= 0.5;
  
}

// ****************************************************************************
// * sigma*x aux noeudx
// ****************************************************************************


∀ nodes  void iniMnoeud(void) in(node coord)  out (/*node coord,*/ node nM ) @ -5.0
{
  nM = F_sigma(coord);
   
}

// ****************************************************************************
//F décalé à droite   aux noeudx
// ****************************************************************************


∀ nodes  void iniMnoeud_plus(void) in(node coord)  out (/*node coord,*/ node nM ) @ -5.0
{
  nM_plus = F_sigma(coord +δx*0.5 );
}

// ****************************************************************************
//F décalé à gauche   aux noeudx
// ****************************************************************************

∀ nodes  void iniMnoeud_moins(void) in(node coord)  out (/*node coord,*/ node nM ) @ -5.0
{
  nM_moins = F_sigma(coord -δx*0.5 );
}


