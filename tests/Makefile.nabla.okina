all:$(TGT) $(NABLA) 

$(TGT).cc: $(TGT_FILE) $(NABLA)
	$(NABLA) $(LOG) --okina $(TGT) --$(SIMD) --$(PARALLEL) -i $(TGT_FILE) #--$(COLORS)

$(TGT).o:$(TGT).cc $(TGT_FILE)
	$(CXX) -c $(CFLAGS) $(TGT).cc -o $(TGT).o

$(TGT):$(TGT).o $(TGT_FILE)
	$(CXX) $(PARALLEL_$(PARALLEL)_FLAGS) $(SIMD_$(SIMD)_FLAGS) -o $(TGT)_$(MESH)_$(PARALLEL)_$(SIMD) $(TGT).o $(LIB_$(PARALLEL)_GOMP) ${NABLA_BINARY_DIR}/orgopt/libOrgOpt.a

cln:
	-rm -f *.o $(TGT).cc $(TGT).h $(TGT)

gen1:$(TGT).cc
#	$(CXX) -S -c $(CFLAGS) $(TGT).cc -o $(TGT).S
run1:$(TGT) $(NABLA) 
	OMP_NUM_THREADS=1 CILK_NWORKERS=1 $(SIMD_$(SIMD)_SDE) ./$(TGT)_$(MESH)_$(PARALLEL)_$(SIMD)
run2:$(TGT) $(NABLA) 
	OMP_NUM_THREADS=2 CILK_NWORKERS=2 $(SIMD_$(SIMD)_SDE) ./$(TGT)_$(MESH)_$(PARALLEL)_$(SIMD)
run4:$(TGT) $(NABLA) 
	OMP_NUM_THREADS=4 CILK_NWORKERS=4 $(SIMD_$(SIMD)_SDE) ./$(TGT)_$(MESH)_$(PARALLEL)_$(SIMD)
