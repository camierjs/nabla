// ********************************************************
// cT  partout
// ********************************************************
‚àÄ cells void loop3(void) in (cell cT) @ 2.5{
  const ‚Ñù N_coeff=2.0*epsilon/(2.0*epsilon+tau*Œ¥x);
  const ‚Ñù e1 = N_coeff*(tau*Œ¥t)/(epsilon¬≤ + 2.0*tau*Œ¥t);
  cp1T = cT - e1*(cT -cP);
}


// ********************************************************
// cU partout
// ********************************************************
‚àÄ cells void loop1(void)
  in (cell cU, cell cp1U,  cell cM /*, node nP, node nU*/)  @ 2.6{
  const ‚Ñù Œ¥tSx = Œ¥t/(epsilon*Œ¥x);
  cp1U = cU ;
  ‚àÄ node{    
    if (coord<center)
      cp1U += - (1.0/epsilon)*Œ¥tSx*cM*nU + Œ¥tSx*(nP+(1.0/epsilon)*nM*nU);        
    else 
      cp1U +=  (1.0/epsilon)*Œ¥tSx*cM*nU-Œ¥tSx*(nP+(1.0/epsilon)*nM*nU);
  }
}


