// ****************************************************************************
// * temporalSchemeComputeStandardFluxesSum
// ****************************************************************************
‚àÄ cells void temporalSchemeComputeStandardFluxesSum(void) @ 16.0{
    
//  temperature_source_Œ£ -= e_tp * (temperature - p);    
  ‚àÄ node{
    const Real3 Œîu = -node_u+reconstructed_u;
    if (DEBUG) printf("\n\t[32m[n+1] Œîu[%d]=(%.15e,%.15e)[0m",uid,Œîu.x,Œîu.y);   
//    Real3 FQs = (CQs‚ãÖŒîu)/absCQs*CQs;
//    if (DEBUG) printf("\n\t[32m[n+1] 1:FQs[%d]=(%.15e,%.15e)[0m",uid,FQs.x,FQs.y);
    Real3 FQs = AQs ‚®Ç Œîu;
    if (DEBUG) printf("\n\t[32m[n+1] 2:FQs[%d]=(%.15e,%.15e)[0m",uid,FQs.x,FQs.y);
//    FQs += reconstructed_p*CQs;
    velocity_fluxes_Œ£ -= FQs/epsilon;
    pressure_fluxes_Œ£ -= (CQs‚ãÖnode_u)/epsilon;
  }
  if (DEBUG) printf("\n\t[32m[n+1] pressure_fluxes[%d]=(%.15e)[0m",uid,pressure_fluxes_Œ£);  
}

// ****************************************************************************
// * temporalSchemeApplyFluxesStandard
// ****************************************************************************
‚àÄ cells void temporalSchemeApplyFluxesStandard(void)@ 19.0{
  if (DEBUG) printf("\n\t[32m[n+1] deltaT=%.15e[0m",Œ¥t);
  if (DEBUG) printf("\n\t[32m[n+1] pre u[%d]=(%.15e,%.15e,%.15e)[0m",uid,u.x,u.y,u.z);
  if (DEBUG)
    printf("\n\t[32m[n+1] velocity_fluxes_Œ£[%d]=(%.15e,%.15e,%.15e)[0m",uid,velocity_fluxes_Œ£.x,velocity_fluxes_Œ£.y,velocity_fluxes_Œ£.z);
  u += Œ¥t*velocity_fluxes_Œ£/V;
  if (DEBUG)
    printf("\n\t[32m[n+1] post u[%d]=(%.15e,%.15e,%.15e)[0m",uid,u.x,u.y,u.z);
  if (DEBUG) printf("\n\t[32m[n+1] pre p[%d]=(%.15e)[0m",uid,p);
  if (DEBUG)
    printf("\n\t[32m[n+1] pressure_fluxes_Œ£[%d]=(%.15e)[0m",uid,pressure_fluxes_Œ£);
  p += Œ¥t*pressure_fluxes_Œ£/V;
  if (option_coupling_coef==0)
    e_tp = (sigma_a * Œ¥t)/(epsilon*epsilon+2.*sigma_a*Œ¥t);
  if (option_coupling_coef==1)
    e_tp = 0.5*(1.-exp(-2.*sigma_a*Œ¥t/(epsilon*epsilon)));
  if (option_coupling_coef==2)
    e_tp = sigma_a*Œ¥t/(epsilon*epsilon);
  if (option_semi_implicit){    
    temperature_source_Œ£ = e_tp/(1. + 2.*e_tp) * (p - temperature);
    p-= temperature_source_Œ£;
    temperature += temperature_source_Œ£;///V;
  } else {
    temperature_source_Œ£ = e_tp * (p - temperature);
    p-= temperature_source_Œ£;
    temperature += temperature_source_Œ£;///V;
  }
//  temperature_source_Œ£ -= e_tp * (temperature - p);    
  //p += -temperature_source_Œ£;///V;

  if (DEBUG) printf("\n\t[32m[n+1] post p[%d]=(%.15e)[0m",uid,p);
}

