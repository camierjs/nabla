// ****************************************************************************
// * computeAQsMatrices
// ****************************************************************************
‚àÄ cells void computeAQsMatrices(void)@ 9.0 {
  const Real lambda = 1.0;
  ‚àÄ node{
    AQs = CQs‚äóCQs;
    AQs *= lambda/absCQs;
    if (DEBUG)
      printf("\n[31m[std] AQs[%d;node #%d]=\n\t\t[\
[%.15e %.15e %.15e]\n\t\t\
[%.15e %.15e %.15e]\n\t\t\
[%.15e %.15e %.15e]][0m",uid,cell_node[n*NABLA_NB_CELLS+c],
           AQs.x.x,AQs.x.y,AQs.x.z,
           AQs.y.x,AQs.y.y,AQs.y.z,
           AQs.z.x,AQs.z.y,AQs.z.z);
  }
}

// ****************************************************************************
// * computeBQsMatrices
// ****************************************************************************
‚àÄ cells void computeBQsMatrices(void)@ 9.1 {
  const Real3 ccell=center;
  const Real3 X[4] = {coord[0],coord[1],coord[2],coord[3]};

  ‚àÄ node{
    const int i=#;
    BQs = CQs‚äó(X[i]-ccell);
    BQs *= sigma_s/epsilon;
    if (DEBUG)
      printf("\n\t[31m[std] BQs[%d]=\n\t\t[\
[%.15e %.15e %.15e]\n\t\t\
[%.15e %.15e %.15e]\n\t\t\
[%.15e %.15e %.15e]][0m",uid,
           BQs.x.x,BQs.x.y,BQs.x.z,
           BQs.y.x,BQs.y.y,BQs.y.z,
           BQs.z.x,BQs.z.y,BQs.z.z);
  }
}

