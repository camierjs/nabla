cells void dagCells(File pDDFV){
  pDDFV << "\t";
  foreach node
    pDDFV << "\t" << 1+n->uniqueId().asInteger();
  pDDFV << "\n";
}

nodes void dagNodes(File pDDFV){
  pDDFV << "\t" << coord.x <<"\t"<<coord.y<<"\t"<<node_θ<<"\n";
}

void dagIt(void){
  file(pDDFV,dag);
  pDDFV<<"#33 "<<globalNbCells<<" "<<globalNbNodes<<"\n";
  dagCells(pDDFV);
  dagNodes(pDDFV);
}
