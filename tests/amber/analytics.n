// ****************************************************************************
// * Conditions Initiales
// ****************************************************************************
ℝ U_condini(ℝ x,ℝ t){
  return (x+1.0)*exp(-σ*t);
}
 
ℝ P_condini(ℝ x,ℝ t){   
  return 2.0*x*(x-1.0) ; 
}

ℝ T_condini(ℝ x){
  return 0.0;  
}


// ****************************************************************************
// * Conditions Limites
// ****************************************************************************

//Test 1 for linear advection (smooth data)
ℝ U_condlimi(ℝ x,ℝ t){
  return -ε + exp(-t/ε²) + ε/(2.0*τ-1.0)*exp(-2.0*τ*t/ε²) ;
}

// Test 2 for linear  advection (discontinuous data)
ℝ P_condlimi(ℝ x,ℝ t){
  return  x*(1.0+ exp(-2.0*τ*t/ε²)) ;
}

ℝ T_condlimi(ℝ x){
  return -σ*x;
}
