∀ cells void iniCellCenter(void) out (/*node coord,*/ cell center) @ -5.0 {
  center=0.0;
  ∀ node {
    center+=coord;
  }
  center *= 0.5;
  //info()<<"[iniMnoeud] sigma*x="<<nM << "coord="<<coord ;
  // info()<<"[iniMnoeud]  coord="<<center ;          
}


// ****************************************************************************
// * sigma*x aux mailles
// ****************************************************************************
∀ cells  void iniMcell(void) in(cell center)  out (/*node coord,*/ cell cM ) @ -5.0 {
  cM = (sigma/ε)*center; 
}


