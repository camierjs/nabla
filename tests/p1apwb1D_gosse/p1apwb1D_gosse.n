// ********************************************************
// cT  partout
// ********************************************************
‚àÄ cells void loop3(void) in (cell cT) @ 2.5{
  const ‚Ñù e1 = 1.0-exp(-(tau*Œ¥t)/epsilon¬≤);
  cp1T = cT - e1*(cT -cP);
}


// ********************************************************
// cU partout
// ********************************************************
‚àÄ cells void loop1(void)
  in (cell cU, cell cp1U,  cell cM)  @ 2.6{
  const ‚Ñù Œ¥tSx = Œ¥t/(epsilon*Œ¥x);
  const ‚Ñù e1 = 1.0-exp(-(tau*Œ¥t)/epsilon¬≤);
  const ‚Ñù e2 = exp(-(tau*Œ¥t)/epsilon¬≤);
  cp1U = cU-e1*cU;
  ‚àÄ node{    
    if (coord<center)
      cp1U += e2*(-(1/epsilon)*Œ¥tSx*cM*nU +Œ¥tSx*(nP+ (1/epsilon)*nM*nU))+e1*nT_g;        
    else
      cp1U +=  e2*((1/epsilon)*Œ¥tSx*cM*nU-Œ¥tSx*(nP + (1/epsilon)*nM*nU))-e1*nT_d ;
  }
}  


// ********************************************************
// cP  partout
// ********************************************************
‚àÄ cells void loop2(void)
  in (cell cU, cell cP, cell cM) @ 2.61{
  const ‚Ñù Œ¥tSx = Œ¥t/(epsilon*Œ¥x);
  //const ‚Ñù e1 = (tau*Œ¥t)/(epsilon¬≤ + 2*tau*Œ¥t);
  const ‚Ñù e1 = 1.0-exp(-(tau*Œ¥t)/epsilon¬≤);
  const ‚Ñù e2 = exp(-(tau*Œ¥t)/epsilon¬≤);
  cp1P=e2*cP;
  ‚àÄ node{
    if (center<coord)
      cp1P += -e2*nU*Œ¥tSx+e1*nT_d*0.5 ;
    else
      cp1P += e2*nU*Œ¥tSx+ e1*nT_g*0.5;
  }
} 


