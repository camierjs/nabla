∀ cells void dumpSolution(File results) in (cell cU, cell cP, cell cM)
{
  results  << "\t" << center
           << "\t" << P_condlimi(center,option_stoptime)
           << "\t" << cP
           << "\t" << pow(cTm,4)
           << "\n";
}

∀ cells void dumpOutput(void) in (cell cU, cell cP, cell cM)
  
