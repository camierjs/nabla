          }
    
      }

 
  

}


// ********************************************************
// cP  partout
// ********************************************************

∀ cells void loop2(void)
  in (cell cU, cell cP, cell cM) @ 2.61
{
  const ℝ N_coeff=1;//2*epsilon/(2*epsilon+tau*δx);
  const ℝ e1 = N_coeff*(tau*δt)/(epsilon² + 2*tau*δt);
  const ℝ δtSx = δt/(epsilon*(cδx));
  
  cp1P=cP +e1*(cT-cP)  ;
  
  ∀ node
   

      {
        if (center<coord)
          {
          cp1P += -nU*δtSx;
      
        } else
          {
          cp1P += nU*δtSx ;
      
        }
   
      }
 
  
} 



   

  
