// ***************************************************************************
// * Verification Checksum for Un & Vn with the 64x48 test case
// ***************************************************************************
chkIni @ 11.0 if (iteration==(option_max_iterations-1)) { chkU=0;chkV=0;chkH=0; }
chk64x48x8 @ 11.2 if (iteration==(option_max_iterations-1) &&
                      NX==64 && NY==48 && option_max_iterations==8 &&
                      option_time_step==0.0025 && option_fill==true) {
  assert((unsigned int)chkU==0xD5C2A03C &&
         (unsigned int)chkV==0x843E3C00 &&
         (unsigned int)chkH==0x1E01DE90);
  checked(&chkU,&chkV,&chkH);
}

chk64x48x8192 @ 11.2 if (iteration==(option_max_iterations-1) &&
                         NX==64 && NY==48 && option_max_iterations==8192 &&
                         option_time_step==0.0025 && option_fill==false) {
  assert((unsigned int)chkU==0xA7B040F3 &&
         (unsigned int)chkV==0x45A24469 &&
         (unsigned int)chkH==0xE8DD076B);
  checked(&chkU,&chkV,&chkH);
}

void checked(void) {
  printf("\n[1;32m[checked] (0x%X,0x%X,0x%X) ![m",chkU,chkV,chkH);
}

// ***************************************************************************
// * Checksum on velocity
// ***************************************************************************
∀ cells @ 11.1 if (iteration==(option_max_iterations-1)) {
  const long int hnhl=*(long int*)&hn;
  const int hnh=(int)(hnhl>>32);
  const int hnl=(int)(hnhl&((1l<<32)-1));
  chkH = chkH^hnh;
  chkH = chkH^hnl;
}

// ***************************************************************************
// * Checksum on velocity
// ***************************************************************************
∀ inner cells @ 11.1 if (iteration==(option_max_iterations-1)) {
  const long int unhl=*(long int*)&un;
  const int unh=(int)(unhl>>32);
  const int unl=(int)(unhl&((1l<<32)-1));
  chkU = chkU^unh;
  chkU = chkU^unl;
}

// ***************************************************************************
// * Checksum on velocity
// ***************************************************************************
∀ inner cells @ 11.1 if (iteration==(option_max_iterations-1)) {
  const long int vnhl=*(long int*)&vn;
  const int vnh=(int)(vnhl>>32);
  const int vnl=(int)(vnhl&((1l<<32)-1));
  chkV ^= vnh;
  chkV ^= vnl;
}

// ***************************************************************************
// * Fill
// ***************************************************************************
void fill(double *m) {
  //printf("\n[1;37m[fill][m[37m:");
  for(int j=1;j<=Y_EDGE_ELEMS;j+=1){
    //printf("\nj=%d: ",j-1);
    for(int i=1;i<=X_EDGE_ELEMS;i+=1){
      double data = 0.0;
      data =  i/1.e1+i/1.e2+i/1.e3+i/1.e10+i/1.e11+i/1.e12;
      data += j/1.e4+j/1.e5+j/1.e6+j/1.e7+j/1.e8+j/1.e9;
      //data = -data;
      //printf(" %d",i-1);
      m[(j-1)*X_EDGE_ELEMS+i-1]=data;
    }
  }
  printf("[m");
}

// ***************************************************************************
// * inner_refill
// ***************************************************************************
int kReFill=0;
ℝ inner_refill(const ℕ offset){
  if (offset==0) kReFill=0;
  const ℕ k= kReFill++;
  const ℕ i = (k%X_EDGE_ELEMS)+1;
  const ℕ j = (k/X_EDGE_ELEMS)+1;
  ℝ data = 0.0;
  data =  i/1.e1+i/1.e2+i/1.e3+i/1.e10+i/1.e11+i/1.e12;
  data += j/1.e4+j/1.e5+j/1.e6+j/1.e7+j/1.e8+j/1.e9;
  return data;
}

// ***************************************************************************
// * Dump
// ***************************************************************************
void dumpIJ(const double *data, const int im, const int iMax, const int jm, const int jMax){
  printf("\n[33m");
  for(int j=jm;j<jMax;j+=1){
    printf("[");
    for(int i=im;i<iMax;i+=1){
      const double value=data[j*X_EDGE_ELEMS+i];
      if (value>=0.0)
        printf(" %.12f",value);
      else
        printf("-%.12f",-value);
    }
    printf("]%c",j!=(jMax-1)?'\n':' ');
  }
  printf("[m");
}

void      dump(const double *data) {dumpIJ(data,0,X_EDGE_ELEMS,0,Y_EDGE_ELEMS);}
void innerDump(const double *data) {dumpIJ(data,1,X_EDGE_ELEMS-1,1,Y_EDGE_ELEMS-1);}
