‚àÄ cells void loop3(void)
  in (cell cT) @ 2.5{
  const ‚Ñù N_coeff=1.0;//2*epsilon/(2*epsilon+tau*Œ¥x);
  const ‚Ñù e1 = 0.5*(1-exp((-2.0*tau*Œ¥t)/(epsilon¬≤)));
  cp1T = cT - e1*(cT -cP);
}


// ********************************************************
// cU partout
// ********************************************************
‚àÄ cells void loop1(void)
  in (cell cU, cp1U, cM /*, node nP, node nU*/)  @ 2.6{
  const ‚Ñù Œ¥tSx = Œ¥t/(epsilon*cŒ¥x);
  cp1U = cU;
  ‚àÄ node{    
    if (coord<center)
      cp1U += - (1/epsilon)*Œ¥tSx*cM*nU + Œ¥tSx*(nP+ (1/epsilon)*nM*nU);        
    else
      cp1U +=  (1/epsilon)*Œ¥tSx*cM*nU-Œ¥tSx*(nP + (1/epsilon)*nM*nU);
    if (coord==0){}
  }
}


// ********************************************************
// cP  partout
// ********************************************************
‚àÄ cells void loop2(void)
  in (cell cU, cell cP, cell cM) @ 2.61{
  const ‚Ñù N_coeff=1.0;//2*epsilon/(2*epsilon+tau*Œ¥x);
  const ‚Ñù e1 = N_coeff*(tau*Œ¥t)/(epsilon¬≤ + 2.0*tau*Œ¥t);
  const ‚Ñù Œ¥tSx = Œ¥t/(epsilon*(cŒ¥x));
  cp1P=cP +e1*(cT-cP)  ;
  ‚àÄ node{
    if (center<coord)
      cp1P += -nU*Œ¥tSx;
    else
      cp1P += nU*Œ¥tSx ;
  }
} 

  
